<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_title_lostDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/md_teal_A700"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/md_blue_grey_500"
            android:text="类型："/>
        <TextView
            android:id="@+id/textview_type_lostDetail"
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/md_blue_grey_500"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="名称："
            android:textColor="@color/md_blue_grey_500"
            android:textSize="17dp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/textview_name_lostDetail"
            android:textColor="@color/md_blue_grey_500"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_blue_grey_500"
            android:textSize="17dp"
            android:text="时间："/>
        <TextView
            android:textSize="17dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/md_blue_grey_500"
            android:id="@+id/textview_startdate_lostDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_blue_grey_500"
            android:textSize="17dp"
            android:layout_marginLeft="4dp"
            android:text="-"/>
        <TextView
            android:textSize="17dp"
            android:textColor="@color/md_blue_grey_500"
            android:id="@+id/textview_enddate_lostDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textSize="19dp"
        android:id="@+id/textview_description_lostDetail"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布人："
            android:layout_marginLeft="5dp"
            android:textColor="@color/md_blue_grey_500"
            android:textSize="17dp"/>
    <TextView
        android:id="@+id/textview_username_lostDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/md_blue_grey_500"
        android:layout_marginLeft="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/md_blue_grey_500"
            android:textSize="17dp"
            android:id="@+id/textview_contactway_lostDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/textview_contactdetial_lostDetail"
            android:layout_width="wrap_content"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_blue_grey_500"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>