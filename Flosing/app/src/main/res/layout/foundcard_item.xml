<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/half_white_1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/half_white_1000">
        <TextView
            android:background="@color/half_white_1000"
            android:id="@+id/foundcard_title"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:textSize="18dip"
            android:layout_marginTop="5dip"
            android:paddingRight="8dip"
            android:paddingLeft="8dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:textColor="@color/md_teal_600"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/half_white_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dip"
        android:paddingLeft="8dip">
        <TextView
            android:layout_marginLeft="15dip"
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:textSize="15sp"
            android:text="拾物名称："
            android:textColor="@color/md_blue_grey_800"/>
        <TextView
            android:id="@+id/foundcard_name"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:textSize="15dip"
            android:layout_marginLeft="5sp"
            android:textColor="@color/md_blue_grey_700"/>

    </LinearLayout>
    <LinearLayout
        android:background="@color/half_white_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="8dip"
        android:paddingLeft="8dip">

        <TextView
            android:layout_marginLeft="15dip"
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:textSize="15sp"
            android:text="拾物类型："
            android:textColor="@color/md_blue_grey_800"/>
        <TextView
            android:id="@+id/foundcard_type"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:textSize="15dip"
            android:layout_marginLeft="5sp"
            android:textColor="@color/md_blue_grey_700"
            />
    </LinearLayout>


    <LinearLayout
        android:background="@color/half_white_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="8dip"
        android:paddingLeft="8dip"
        android:paddingBottom="6dip"
        android:layout_marginBottom="3dip">


        <TextView
            android:layout_marginLeft="15dip"
            android:id="@+id/foundcard_sDate"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:textSize="15sp"
            android:textColor="@color/md_blue_grey_700"
            />
        <TextView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:textSize="15sp"
            android:text="起"
            android:layout_marginLeft="15dip"
            android:textColor="@color/md_blue_grey_800"/>

        <TextView
            android:id="@+id/foundcard_eDate"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:textSize="15sp"
            android:layout_marginLeft="15dip"
            android:textColor="@color/md_blue_grey_700"
            />
        <TextView
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:text="止"
            android:textSize="15sp"
            android:layout_marginLeft="15dip"
            android:textColor="@color/md_blue_grey_700"/>


    </LinearLayout>


</LinearLayout>