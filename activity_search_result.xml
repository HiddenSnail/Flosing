<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <Button
                android:background="@color/white"
                android:id="@+id/search_result_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="寻物启示"
                android:textColor="@color/md_blue_grey_500"
                android:layout_weight="1"/>

            <Button
                android:background="@color/white"
                android:id="@+id/search_result_lost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="失物招领"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="#FFFFFF">
            <Button
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/md_blue_300"
                android:layout_weight="1"/>

            <Button
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>

    <fragment
        android:name="com.our.flosing.view.LostSearchResultFragment"
        android:id="@+id/search_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>