<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.our.flosing.view.MainActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#2EB872">
        <ImageButton
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/person"
            android:background="#00000000"
            android:src="@drawable/person"
            android:scaleType="centerInside"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/shape_corner_left"
                android:id="@+id/lost_list"
                android:text="寻物启示"
                android:textColor="#2EB872"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/shape_corner_right"
                android:id="@+id/find_list"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="失物招领"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/search"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/search"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <fragment
            android:layout_above="@+id/layout2"
            android:layout_marginBottom="5dp"
            android:id="@+id/content"
            android:name="com.our.flosing.view.LostCardFragment"
            android:layout_width="match_parent"
            android:layout_height="360dp">

        </fragment>


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1">
            <ImageButton
                android:background="#00000000"
                android:src="@drawable/publish1"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:id="@+id/lost_publish"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>
                <TextView
                    android:text="发布寻物启事"
                    android:textColor="@color/md_blue_grey_500"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="1">
            <ImageButton
                android:src="@drawable/publish2"
                android:id="@+id/found_publish"
                android:background="#00000000"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>

            <TextView
                android:text="发布失物招领"
                android:textColor="@color/md_blue_grey_500"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_weight="1"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
